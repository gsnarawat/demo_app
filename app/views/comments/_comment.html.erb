<% @post.comments.each do |comment| %>
<p>
   <b> Commenter: </b>
   <%= comment.commenter %>
</p>

<p>
	<b> Comment: </b>
	<%= comment.body %>
</p>

<p>
	<%= link_to 'Destroy Comment', [comment.post, comment],
	             :confirm => 'Are your sure to delete the comment?',
				 :method => :delete %>
</p>

<% end %>


